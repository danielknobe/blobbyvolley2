<?xml version="1.0" encoding="utf-8"?>

<userconfig>
	<!-- Left Blobby Inputconfiguration -->
	<var name="left_blobby_device" value="mouse"/>
	
	<var name="left_blobby_mouse_jumpbutton" value="1" />

	<!-- Keyboard -->
	<var name="left_blobby_keyboard_left" value="a"/>
	<var name="left_blobby_keyboard_right" value="d"/>
	<var name="left_blobby_keyboard_jump" value="w"/>

	<!-- Gamepad/Joystick -->
	<var name="left_blobby_joystick_left" value="joy_0_button_0" />
	<var name="left_blobby_joystick_right" value="joy_0_button_1" />
	<var name="left_blobby_joystick_jump" value="joy_0_button_2" />

	<!-- Right Blobby Inputconfiguration -->
	<var name="right_blobby_device" value="keyboard"/>
	
	<var name="right_blobby_mouse_jumpbutton" value="1" />
	<!-- Keyboard -->
	<var name="right_blobby_keyboard_left" value="a"/>
	<var name="right_blobby_keyboard_right" value="d"/>
	<var name="right_blobby_keyboard_jump" value="w"/>
	
	<!-- Gamepad/Joystick -->
	<var name="right_blobby_joystick_left" value="joy_0_button_0" />
	<var name="right_blobby_joystick_right" value="joy_0_button_1" />
	<var name="right_blobby_joystick_jump" value="joy_0_button_2" />
</userconfig>

